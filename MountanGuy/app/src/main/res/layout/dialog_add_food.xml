<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1) Geben Sie die Nährwerte für je 100 Gramm ein"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2) Verwenden Sie für Dezimalzahlen einen Punkt"
        android:layout_gravity="center"/>


    <EditText
        android:id="@+id/food_inputs_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Lebensmittel Name"/>

    <EditText
        android:id="@+id/calories_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Kalorien"/>

    <EditText
        android:id="@+id/protein_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Eiweiße"/>

    <EditText
        android:id="@+id/carbs_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Kohlenhydrate"/>

    <EditText
        android:id="@+id/fatsInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fette"/>

    <EditText
        android:id="@+id/weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Gewicht in g"/>


</LinearLayout>